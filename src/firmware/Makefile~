FIRMWARE_TARGET=cfw002_fw.bin
FIRMWARE_MD5_FILE=$(FIRMWARE_TARGET).md5

all: $(FIRMWARE_TARGET)
	md5sum $(FIRMWARE_TARGET) > $(FIRMWARE_MD5_FILE)

clean:
	-rm -f $(FIRMWARE_MD5_FILE)

install: $(FIRMWARE_TARGET)
	# firmware
	mkdir -p /lib/firmware/
	cp $(FIRMWARE_TARGET) /lib/firmware/

uninstall:
	# firmware
	-rm -f /lib/firmware/$(FIRMWARE_TARGET)
